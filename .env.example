NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://admin:password@localhost:5432/nestjs_auth?schema=public"
DATABASE_USER=admin
DATABASE_PASSWORD=password
DATABASE_NAME=nestjs_auth
DATABASE_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# JWT
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourapp.com

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# App
APP_NAME="NestJS Auth System"
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000